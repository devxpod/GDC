<html lang="en">
<head>
    <title>Auth0 Mock Login</title>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"></script>
    <style>

        .magical {
            background: #2986cc;
            background: -webkit-linear-gradient(to right, #020024, #0e0e9d, #00d4ff);
            background: linear-gradient(to right, #020024, #0e0e9d, #00d4ff);
        }

        /* main section home */
        #ufoImageContainer {
            width: 9vw;
            position: absolute;
            top: 3vh;
            left: 87vw;
        }

        /* animation is inconsistant on safari */
        /* for ufo animation */
        .ufoImage {
            /*display: none;*/
            transform: translate3d(0px, 0rem, 0px);
            /* animation: ufoRotation 2.7s linear infinite; */

            animation-name: ufoRotation;
            animation-duration: 2.7s;
            animation-iteration-count: infinite;
            animation-timing-function: linear;


            /* -webkit-animation: ufoRotation 2.7s linear infinite; */
            -webkit-animation-name: ufoRotation;
            -webkit-animation-duration: 2.7s;
            -webkit-animation-iteration-count: infinite;
            -webkit-animation-timing-function: linear;

            /* -webkit-animation-fill-mode: forwards; */
            -moz-animation: ufoRotation 2.7s linear infinite;
            -o-animation: ufoRotation 2.7s linear infinite;
            width: 100%;
        }

        @keyframes ufoRotation {
            0% {
                transform: rotate(0deg) translate(3.5rem) rotate(0deg);
            }

            100% {
                transform: rotate(-360deg) translate(3.5rem) rotate(360deg);
            }
        }

        @-webkit-keyframes ufoRotation {
            0% {
                -webkit-transform: rotate(0deg) translate(3.5rem) rotate(0deg);
            }

            100% {
                -webkit-transform: rotate(-360deg) translate(3.5rem) rotate(360deg);
            }
        }

        @-moz-keyframes ufoRotation {
            0% {
                -moz-transform: rotate(0deg) translate(3.5rem) rotate(0deg);
            }

            100% {
                -moz-transform: rotate(-360deg) translate(3.5rem) rotate(360deg);
            }
        }

        @-o-keyframes ufoRotation {
            0% {
                -o-transform: rotate(0deg) translate(3.5rem) rotate(0deg);
            }

            100% {
                -o-transform: rotate(-360deg) translate(3.5rem) rotate(360deg);
            }
        }

        @keyframes btnRotation {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        @keyframes shake {
            10%,
            90% {
                transform: translate3d(-3px, 0, 0);
            }
            20%,
            80% {
                transform: translate3d(3px, 0, 0);
            }
            30%,
            50%,
            70% {
                transform: translate3d(-6px, 0, 0);
            }
            40%,
            60% {
                transform: translate3d(6px, 0, 0);
            }
        }

        @media only screen and (max-width: 991px) {

            button.magical {
                width: 50%;
            }

            /* for ufo animation */
            @keyframes ufoRotation {
                0% {
                    transform: rotate(0deg) translate(1.5rem) rotate(0deg);
                }

                100% {
                    transform: rotate(-360deg) translate(1.5rem) rotate(360deg);
                }
            }
            @-webkit-keyframes ufoRotation {
                0% {
                    transform: rotate(0deg) translate(1.5rem) rotate(0deg);
                }

                100% {
                    transform: rotate(-360deg) translate(1.5rem) rotate(360deg);
                }
            }
            @-moz-keyframes ufoRotation {
                0% {
                    transform: rotate(0deg) translate(1.5rem) rotate(0deg);
                }

                100% {
                    transform: rotate(-360deg) translate(1.5rem) rotate(360deg);
                }
            }
            @-o-keyframes ufoRotation {
                0% {
                    transform: rotate(0deg) translate(1.5rem) rotate(0deg);
                }

                100% {
                    transform: rotate(-360deg) translate(1.5rem) rotate(360deg);
                }
            }
        }

        @media only screen and (max-width: 768px) {
            .magical {
                border-top-right-radius: .3rem;
                border-bottom-right-radius: .3rem;
            }

            button.magical {
                width: 100%;
            }

            /* for UFO */
            #ufoImageContainer {
                width: 110px;
                /* position: absolute; */
                top: 4vh;
                left: 6vw;
            }

            .magical-form {
                height: 100vh !important;
            }
        }

        @media only screen and (max-width: 425px) {
            #ufoImageContainer {
                width: 90px;
                /* position: absolute; */
                top: 0;
                left: 6vw;
            }
        }
    </style>
</head>

<body>

<section class="h-100 magical-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img id="mainImg" src="images/img.svg"
                                         style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">Auth0 Mock</h4>
                                </div>

                                <form action="login?redirect=<%= redirect; %>&state=<%= state; %>" method="post">
                                    <p>Please login to your account</p>
                                    <div class="form-outline mb-4">
                                        <input type="text"
                                               class="form-control"
                                               id="username"
                                               name="username"
                                               placeholder="Enter Username"
                                               value="<%= username; %>">
                                        <label class="form-label" for="username">Username</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password"
                                               class="form-control"
                                               id="pw"
                                               name="pw"
                                               placeholder="Password"
                                               value="<%= password; %>">
                                        <label class="form-label" for="pw">Password</label>
                                    </div>
                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg magical mb-3 shadow-lg"
                                                type="submit" id="submitBtn">Login
                                        </button>
                                    </div>
                                </form>

                            </div>
                        </div>
                        <div class="d-none d-sm-block col-lg-6 d-flex align-items-center magical" id="magicContainer">
                            <div class="position-relative top-50 start-50 translate-middle text-white px-3 py-4 p-md-5 mx-md-4">
                                <h3 class="mb-4">It's more than just a mock. It's a mocking lifestyle</h3>
                                <p class="large font-weight-bold">Users are defined within
                                    <span class="font-italic text-warning">auth0_mock/users.json</span>. <br><br>
                                    You can override by adding your own users file
                                    <span class="font-italic text-warning">auth0_mock/users-local.json</span>.<br><br>
                                    <span class="font-weight-bold font-italic text-warning larger">JSON key must match username property</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- flyingUFOContainer -->
<div id="ufoImageContainer">
    <img class="ufoImage" src="images/ufo-2.svg">
</div>
<script>
    const hovTarg = document.getElementById("mainImg");
    const ufoTarg = document.getElementById("ufoImageContainer");
    const jackedBtnTarg = document.getElementById("submitBtn");
    const magicContainerTarg = document.getElementById("magicContainer");
    ufoTarg.style.display = "none";
    hovTarg.addEventListener("mouseover", function () {
        ufoTarg.style.display = "block";
        jackedBtnTarg.style.animation = "btnRotation infinite 3s linear";
        magicContainerTarg.style.animation = "btnRotation infinite 4s linear";
    });
    hovTarg.addEventListener("mouseout", function () {
        ufoTarg.style.display = "none";
        jackedBtnTarg.style.animation = "none";
        magicContainerTarg.style.animation = "none";
    });
    jackedBtnTarg.addEventListener("mouseover", function () {
        jackedBtnTarg.style.background = "green";
        jackedBtnTarg.style.animation = "shake 1s infinite";
    });
    jackedBtnTarg.addEventListener("mouseout", function () {
        jackedBtnTarg.style.background = "#2986cc";
        jackedBtnTarg.style.background = "-webkit-linear-gradient(to right, #020024, #0e0e9d, #00d4ff)";
        jackedBtnTarg.style.background = "linear-gradient(to right, #020024, #0e0e9d, #00d4ff)";
        jackedBtnTarg.style.animation = "none";
    });
</script>
</body>

